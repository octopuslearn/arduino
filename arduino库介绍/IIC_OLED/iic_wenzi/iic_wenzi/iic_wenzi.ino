void setup()
{
  OLED_dispaly.begin(SSD1306_SWITCHCAPVCC, 0x3C);   //初始化OLED,IICd地址0x3c  //switchvcc： OLED的电压
}



void loop()
{
  OLED_dispaly.clearDisplay();      //清屏
  
  OLED_dispaly.drawBitmap(20 * 1, 16, Bim_128x64_1, 32, 32, 1 );//左、右上角x坐标，图形数据，图形宽、高，颜色SSD1306_BLACK, SSD1306_WHITE or SSD1306_INVERT
  OLED_dispaly.drawBitmap(20 * 2, 16, Bim_128x64_2, 32, 32, 1 );
  OLED_dispaly.drawBitmap(20 * 3, 16, Bim_128x64_3, 32, 32, 1 );
  
  OLED_dispaly.display();           //显示内容      

  delay(200);
}
